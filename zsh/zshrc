eval "$(starship init zsh)"

# Plugins
source ~/.zsh/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh
source ~/.zsh/zsh-autocomplete/zsh-autocomplete.plugin.zsh
source ~/.zsh/zsh-autosuggestions/zsh-autosuggestions.zsh

# History
HISTSIZE=1000   # Number of commands to keep in memory
SAVEHIST=1000000  # Number of commands to save in the history file
HISTFILE=~/.my_custom_history
setopt SHARE_HISTORY
setopt HIST_IGNORE_DUPS
setopt EXTENDED_HISTORY

# Set the default editor
export EDITOR="emacs"

# Set the default browser
export BROWSER="chrome"

# Enable colorized output in the terminal
export CLICOLOR=1
export LSCOLORS=GxFxCxDxBxegedabagaced

export PATH=/usr/local/bin:/usr/bin:/bin:/usr/local/go/bin:/home/aaa/.local/bin
export GOPATH=$HOME/code/golang
export GOBIN=$GOPATH/bin
export PATH=$PATH:$GOBIN
